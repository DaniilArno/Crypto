      <div class="shop__color-picker__item">
        <label class=" custom-radio custom-radio--c-black custom-radio--active mr-10">
          <input type="radio" value="black" checked="checked" name="device-color-radio">
          <span class="checkmark"></span>
        </label>
      </div>
      <div class="shop__color-picker__item">
        <label class="custom-radio custom-radio--c-white ">
          <input type="radio" value="white" name="device-color-radio">
          <span class="checkmark"></span>
        </label>
				
      </div>
      <div class="shop__color-picker__item">
        <label class="custom-radio custom-radio--c-blue ">
          <input type="radio" value="blue" name="device-color-radio">
          <span class="checkmark"></span>
        </label>
      </div>
			
			
    </div>
